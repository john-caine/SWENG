<?xml version="1.1" encoding="UTF-8"?>
<slideshow>
	<documentinfo>
		<author>John Caine</author>
		<version>1.1</version>
    <title>Recipe Example #2</title>
		<comment>This is recipe example 2 in the defaultRecipe folder</comment>
		<width>1600</width>
		<height>900</height>
	</documentinfo>
	<defaults>
		<backgroundcolor>#00FF00</backgroundcolor>
		<font>Times New Roman</font>
		<fontsize>24</fontsize>
		<linecolor>#000000</linecolor>
		<fontcolor>#0000FF</fontcolor>
		<fillcolor>#FF0000</fillcolor>
	</defaults>
	<ingredients>
		<ingredient name="potato" amount="700" units="grams" />
		<ingredient name="vegetable oil" amount="2" units="tablespoons" />
		<ingredient name="unsalted butter" amount="2" units="oz" />
		<ingredient name="garlic" amount="2" units="cloves" />
		<ingredient name="brown sugar" amount="0.5" units="teaspoon" />
		<ingredient name="chicken stock" amount="2" units="pints" />
	</ingredients>
	<slide id="0" duration="10" lastSlide="false">
		<text xstart="10" ystart="10" yend="100" font="Times New Roman" fontsize="16" fontcolor="#00FFFF" starttime="10"> 
			<textbody underlined="true" bold="true" italic="true">
        <textstring>This is a test of required attributes</textstring>
      </textbody>
    </text>
		<text xstart="10" ystart="100" xend="1000" yend="300" font="Times New Roman" fontsize="16" fontcolor="#00FFFF" orientation="180">
			<textbody branch="5">
        <textstring>This is a test of optional font attributes</textstring>
      </textbody>
		</text>
		<text xstart="10" ystart="200" xend="1000" yend="400" starttime="10" duration="10" layer="2">
      <textbody>
        <textstring>This is a test of timing attributes</textstring>
      </textbody>
		</text>
		<text xstart="10" ystart="300" xend="500" yend="330"> 
			<textbody bold="true">
        <textstring>This text should be bold. </textstring>
      </textbody>
      <textbody italic="true">
        <textstring>This text should be italic. </textstring>
      </textbody>
      <textbody underlined="true">
        <textstring>This text should be underlined. </textstring>
      </textbody>
    </text>
	</slide>
	<slide id="1" duration="30" lastSlide="false">
		<shape totalpoints="4" width="150" height="150">
			<point num="1" x="100" y="100"/>
			<point num="2" x="250" y="100"/>
			<point num="3" x="250" y="250"/>
			<point num="4" x="100" y="250"/>
		</shape>
		<shape totalpoints="1" width="100" height="100" fillcolor="#9400D3" linecolor="#000000">
			<point num="1" x="500" y="200"/>
		</shape>
		<shape totalpoints="2" width="2" height="2" starttime="15" duration="15" layer="1">
			<point num="1" x="150" y="150"/>
			<point num="2" x="250" y="250"/>
		</shape>
	</slide>
	<slide id="2" duration="90" lastSlide="false">
		<audio urlname="http://ystv.co.uk/~john.caine/swengrepo/sample1.mp3" starttime="5" duration="20" false="loop"/>
		<audio urlname="http://ystv.co.uk/~john.caine/swengrepo/sample2.mp3" starttime="35" loop="false"/>
	</slide>
	<slide id="3" duration="40" lastSlide="false">
		<image urlname="http://4.bp.blogspot.com/-D6YYIZDSxks/UXvED6as6cI/AAAAAAAAAHs/ddOuPj9Yh7I/s1600/waffle+and+syrup.jpg" xstart="10" ystart="10" width="512" height="384"/>
		<image urlname="http://2.bp.blogspot.com/-UwQy6WiradM/T9igHkNTakI/AAAAAAAARfA/2lj7tz2L-So/s1600/P5294569.jpg" xstart="1194" ystart="600" duration="20" width="396" height="300" layer="3"/>
	</slide>
	<slide id="4" duration="90" lastSlide="true">
		<video urlname="http://ystv.co.uk/~john.caine/swengrepo/14_Fusion_Promo_spr08.mp4" xstart="10" ystart="10" layer="2" duration="10" />
		<video urlname="http://ystv.co.uk/~john.caine/swengrepo/ident_ice-XviD.avi" xstart="300" ystart="300" width="400" height="400" loop="true" starttime="15" />		
	</slide>
<slide id="5" lastSlide="false">
		<text xstart="10" ystart="10" xend="1000" yend="100"> 
			<textbody>
        <textstring>This is the branch slide for the text object</textstring>
      </textbody>
    </text>
	</slide>
  <slide id="6" lastSlide="false">
		<text xstart="10" ystart="10" xend="1000" yend="100"> 
			<textbody>
        <textstring>This is the branch slide for the image object</textstring>
      </textbody>
    </text>
	</slide>
</slideshow>