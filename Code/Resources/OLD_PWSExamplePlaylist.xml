<?xml version="1.1" encoding="UTF-8"?>
<slideshow>
	<documentinfo>
		<author>Stuart Porter</author>
		<version>1.0</version>
		<comment>Sample of the MediaPlayer input File</comment>
		<width>640</width>
		<height>480</height>
	</documentinfo>
	<defaults>
		<backgroundcolor>#00FF00</backgroundcolor>
		<font>Times New Roman</font>
		<fontsize>24pt</fontsize>
		<fontcolor>#0000FF</fontcolor>
		<linecolor>#00FF00</linecolor>
		<fillcolor>#FF0000</fillcolor> 
	</defaults>
	<slide id="sample1(text)" duration="60" lastSlide="false">
		<text>
			<xstart>10</xstart> 
			<ystart>10</ystart> 
			<xend>100</xend>
			<yend>25</yend> 
			<textbody>This is a test of required attributes</textbody>
		</text>
		<text>
			<xstart>10</xstart> 
			<ystart>35</ystart> 
			<xend>100</xend>
			<yend>50</yend>
			<font>Time-Roman</font>
			<fontsize>16</fontsize>
			<fontcolor>#F7F4F1</fontcolor>
			<textbody>This is a test of optional font attributes</textbody>
		</text>
		<text>
			<xstart>10</xstart> 
			<ystart>60</ystart> 
			<xend>100</xend>
			<yend>75</yend>
			<starttime>10</starttime>
			<duration>40</duration>
			<layer>2</layer>
			<textbody>This is a test of timing attributes</textbody>
		</text>
		<text>
			<xstart>10</xstart> 
			<ystart>90</ystart> 
			<xend>100</xend>
			<yend>105</yend> 
			<textbody><b>This text should be bold</b>%n<i>This text should be italics</i>%n<u>This text should be underlined</u></textbody>
		</text>
	</slide>
	<slide id="sample2(shapes)" duration="30" lastSlide="false">
		<shape totalpoints="4" width="15" height="15">
			<point num="1" x="10" y="10"/>
			<point num="2" x="25" y="10"/>
			<point num="3" x="25" y="25"/>
			<point num="4" x="10" y="25"/>
		</shape>
		<shape totalpoints="1" width="10" height="10" fillcolor="#9400D3" linecolor="#000000">
			<point num="1" x="100" y="100"/>
		</shape>
		<shape totalpoints="2" width="2" height="2" starttime="15" duration="15" layer="1">
			<point num="1" x="150" y="150"/>
			<point num="2" x="250" y="250"/>
		</shape>
	</slide>
	<slide id="sample3(audio)" duration="90" lastSlide="false">
		<audio>
			<urlname>http://ystv.co.uk/~john.caine/swengrepo/sample1.mp3</urlname>
			<starttime>5</starttime>
			<loop>false</loop>
		</audio>
		<audio>
			<urlname>http://ystv.co.uk/~john.caine/swengrepo/sample2.mp3</urlname>
			<starttime>35</starttime>
			<loop>false</loop>
		</audio>
	</slide>
	<slide id="sample4(image)" duration="40" lastSlide="false">
		<image>
			<urlname>http://4.bp.blogspot.com/-D6YYIZDSxks/UXvED6as6cI/AAAAAAAAAHs/ddOuPj9Yh7I/s1600/waffle+and+syrup.jpg</urlname>
			<xstart>10</xstart>
			<ystart>10</ystart>
		</image>
		<image>
			<urlname>http://www.foodfunhealth.com/wp-content/uploads/2010/11/By-Aylanah.jpg</urlname>
			<xstart>50</xstart>
			<ystart>50</ystart>
			<width>200</width>
			<height>200</height>
			<layer>2</layer>
		</image>
		<image>
			<urlname>http://2.bp.blogspot.com/-UwQy6WiradM/T9igHkNTakI/AAAAAAAARfA/2lj7tz2L-So/s1600/P5294569.jpg</urlname>
			<xstart>100</xstart>
			<ystart>100</ystart>
			<duration>20</duration>
			<layer>3</layer>
		</image>
	</slide>
	<slide id="sample5(video)" duration="200" lastSlide="false">
		<video>
			<urlname>http://ystv.co.uk/download/1715/Idents%20-%20Paper.mp4</urlname>
			<xstart>10</xstart>
			<ystart>10</ystart>
			<layer>2</layer>
			<duration>10</duration>
		</video>
		<video>
			<urlname>http://ystv.co.uk/download/2064/Union%20-%20Episode%202.mp4</urlname>
			<xstart>300</xstart>
			<ystart>300</ystart>
			<loop>true</loop>
			<playtime>50</playtime>
			<starttime>15</starttime>
		</video>		
	</slide>
</slideshow>