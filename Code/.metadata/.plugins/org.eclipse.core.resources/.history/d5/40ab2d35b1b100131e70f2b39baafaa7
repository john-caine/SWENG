package eCook;
	
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.stage.Stage;


public class MainMenuButton {
	public Button createSlideShow;
	public SlideMain slide;
	private Stage stage;
	private SlideShow slideShow;

	public MainMenuButton(final Stage stage) {
			this.stage = stage;
			BorderPane border = new BorderPane();	
			createSlideShow = new Button("Create SlideShow");
			HBox hbox = new HBox();
			hbox.getChildren().add(createSlideShow);
			hbox.setAlignment(Pos.CENTER);
			border.setBottom(hbox);
			
//Creates a new slide show when the button is pressed		
		createSlide.setOnAction(new EventHandler<ActionEvent>() {

				@Override
	            public void handle(ActionEvent event) {
					
					new SlideShow(stage);

	            }
	        });
	}
	
}
