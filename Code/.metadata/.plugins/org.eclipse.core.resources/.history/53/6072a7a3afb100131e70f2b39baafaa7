package eCook;


import javafx.geometry.Pos;
import javafx.geometry.Rectangle2D;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Labeled;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.stage.Screen;
import javafx.stage.Stage;

public class MainMenu {


	private Group menuGroup;
	private Scene scene;
	private HBox hbox;
	private MainMenuButton mainMenuButton;
	public MainMenu(Stage stage){
		
		
		
		BorderPane border = new BorderPane();
		Screen screen = Screen.getPrimary();
		Rectangle2D screenBounds = screen.getVisualBounds();
        menuGroup = new Group();
        mainMenuButton = new MainMenuButton(stage);
        hbox.setAlignment(Pos.CENTER);
        hbox.setLayoutX((screenBounds.getWidth()- mainMenuButton.createSlide.getPrefWidth())/2);
        hbox.setLayoutY(screenBounds.getHeight());
        hbox.getChildren().add(mainMenuButton.createSlide);
        menuGroup.getChildren().add(hbox);
        scene =  new Scene(menuGroup, screenBounds.getWidth(), screenBounds.getHeight());
        stage.setScene(scene);
        stage.sizeToScene();
        stage.setFullScreen(true);
        
		
	}

//	@Override
